{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{!-- The big featured header, it uses blog cover image as a BG if available --}}
<header class="site-header outer mtbva-parallax"
        style="background-image: url({{@blog.cover_image}});">
  <div class="inner">
    <div class="site-header-content">
      <h1 class="site-title">
        {{@blog.title}}
      </h1>
      <h2 class="site-description">
        {{@blog.description}}
      </h2>
    </div>
  </div>
</header>

{{> "weather"}}

{{!-- The main content area --}}
<main id="site-main"
      class="site-main outer">
  <div class="post-feed">
    {{#get "posts" limit="all" filter="featured:true"}}
      {{#foreach posts}}
        {{>"post-card"}}
      {{/foreach}}
    {{/get}}
    {{#get "posts" limit="all" filter="featured:false"}}
      {{#foreach posts}}
        {{>"post-card"}}
      {{/foreach}}
    {{/get}}
  </div>
</main>
{{#contentFor "scripts"}}
  <script>
  $(document).ready(function() {
    window.initHomeNabbers()
  })
  </script>
{{/contentFor}}