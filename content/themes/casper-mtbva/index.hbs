{{!< default}}
{{!-- The tag above means: insert everything in this file
into the {body} of the default.hbs template --}}

{{!-- The big featured header, it uses blog cover image as a BG if available --}}
<header class="site-header outer mtbva-parallax"
        style="background-image: url({{@blog.cover_image}});">
  <div class="inner">
    <div class="site-header-content">
      <h1 class="site-title">
        {{@blog.title}}
      </h1>
      <h2 class="site-description">
        {{@blog.description}}
      </h2>
    </div>
  </div>
</header>

{{> "weather"}}

{{!-- The main content area --}}
<main id="site-main"
      class="site-main outer">
  <div class="post-feed">
    {{#get "posts" filter="featured:true" limit="all" as |featured|}}
      {{#foreach featured}}
        {{> "post-card"}}
      {{/foreach}}
    {{/get}}
    {{#get "posts" filter="featured:false" limit="all" as |posts|}}
      {{#foreach posts from="0" to="3"}}
        {{> "post-card"}}
      {{/foreach}}
      <div class="sponsor-single">
        <a href="https://www.visitroanokeva.com/">
          <img src="/content/images/sponsors/nabber/virginias-blue-ridge.jpg"/>
        </a>
      </div>
      {{#foreach posts from="4" to="7"}}
        {{> "post-card"}}
      {{/foreach}}
      <div class="sponsor-single">
        <a href="https://www.deschutesbrewery.com/">
          <img src="/content/images/sponsors/nabber/deschutes.jpg"/>
        </a>
      </div>
      {{#foreach posts from="8" to="11"}}
        {{> "post-card"}}
      {{/foreach}}
      <div class="sponsors-middle mtbva-parallax">
        {{> "sponsors"}}
      </div>
      {{#foreach posts from="12" to="14"}}
        {{> "post-card"}}
      {{/foreach}}
      <div class="sponsor-single">
        <a href="http://jackmasonstavern.com/">
          <img src="/content/images/sponsors/nabber/jack-masons-tavern.jpg"/>
        </a>
      </div>
      {{#foreach posts from="15" to="18"}}
        {{> "post-card"}}
      {{/foreach}}
      <div class="sponsor-single">
        <a href="https://viralstyle.com/store/angelo-wash/Sketchcollect">
          <img src="/content/images/sponsors/nabber/sketch-collect-banner.jpg"/>
        </a>
      </div>
      {{#foreach posts from="19" to="21"}}
        {{> "post-card"}}
      {{/foreach}}

      {{#foreach posts from="22"}}
        {{> "post-card"}}
      {{/foreach}}
    {{/get}}
  </div>
</main>
